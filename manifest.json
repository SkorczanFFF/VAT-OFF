{
  "manifest_version": 3,
  "name": "VAT-OFF",
  "version": "1.0.0",
  "description": "Show prices excluding VAT when you hover over them on any website.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/error-handler.js", "scripts/config.js", "scripts/content.js"],
      "css": ["styles/variables.css", "styles/components.css", "styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VAT-OFF"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
